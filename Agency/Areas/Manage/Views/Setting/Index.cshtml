@model List<Setting>
@{
    int counter = 0;
}
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Key</th>
                <th scope="col">Value</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Setting setting in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@setting.Key</td>
                    <td>@setting.Value</td>
                    <td>
                        <a asp-action="update" asp-route-id="@setting.Id" class="btn btn-primary">Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>