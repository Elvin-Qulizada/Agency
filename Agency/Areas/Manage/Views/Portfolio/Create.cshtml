@model Portfolio
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-4">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" class="form-control" placeholder="Enter Title">
                <span asp-validation-for="Title" class="form-text text-danger"></span>
            </div>
            <div class="col-4">
                <label asp-for="Image">Image</label>
                <input asp-for="Image" class="form-control" placeholder="Enter Image">
                <span asp-validation-for="Image" class="form-text text-danger"></span>
            </div>
            <div class="col-4">
                <label asp-for="CategoryId">Category</label>
                <select asp-for="CategoryId"
                        asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))"></select>
                    <span asp-validation-for="CategoryId" class="form-text text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="form-text text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-success">Create</button>
    </form>
</div>