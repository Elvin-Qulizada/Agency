@model List<Portfolio>
@{
    int counter = 0;
}
<div class="container">
    <div class="container d-flex justify-content-around align-items-center">
        <h1>Portfolio</h1>
        <a asp-action="create" class="btn btn-success">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Image</th>
                <th scope="col">Title</th>
                <th scope="col">Category</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Portfolio portfolio in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td><img src="~/uploads/portfolio/@portfolio.ImageUrl" style="width:150px;border-radius:50%;object-fit:contain"/></td>
                    <td>@portfolio.Title</td>
                    <td>@portfolio.Category.Name</td>
                    <td>@portfolio.Description</td>
                    <td>
                        <a asp-action="update" asp-controller="portfolio" asp-route-id="@portfolio.Id" class="btn btn-primary">Update</a>
                        <a asp-action="delete" asp-controller="portfolio" asp-route-id="@portfolio.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>