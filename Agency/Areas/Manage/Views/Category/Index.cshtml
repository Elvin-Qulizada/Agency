@model PaginatedList<Category>
@{
    int counter = (Model.CurrentPage-1)*Model.PageSize;
}
<div class="container">
    <div class="container d-flex justify-content-around align-items-center">
        <h1>Category</h1>
        <a asp-action="create" class="btn btn-success">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category category in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="update" asp-controller="category" asp-route-id="@category.Id" class="btn btn-primary">Update</a>
                        <a asp-action="delete" asp-controller="category" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <form method="get">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    @if (Model.HasPrevious)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="index" asp-route-page="@(Model.CurrentPage-1)" tabindex="-1">Previous</a>
                        </li>
                    }
                    @for (int i = 1; i < Model.TotalCount; i++)
                    {
                        <li class="page-item @(Model.CurrentPage==i?"active":"")"><a class="page-link" asp-action="index" asp-route-page="@i">@i</a></li>
                    }
                    @if (Model.HasNext)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="index" asp-route-page="@(Model.CurrentPage+1)">Next</a>
                        </li>
                    }
                </ul>
            </nav>
        </form>
    </div>
</div>